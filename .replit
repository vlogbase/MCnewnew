modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Commit"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Gunicorn Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Load Test"

[[workflows.workflow]]
name = "Git Commit"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git add . && git commit -m 'Rollback point: Working prototype'"

[[workflows.workflow]]
name = "Start Gunicorn Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn -c gunicorn_config.py main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Load Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 load_test.py"

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
